{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.2.5",
    "@reduxjs/toolkit": "^1.9.3",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "esbuild": "^0.17.10",
    "eslint": "^8.34.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/parser": "^5.30.6",
    "babel-jest": "^29.4.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.5.1",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "react-test-renderer": "^18.1.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "ts-check": "tsc --project tsconfig.json --noEmit",
    "typecheck:watch": "tsc --project tsconfig.json --noEmit --watch --preserveWatchOutput",
    "lint": "eslint --quiet --ext .ts,.tsx,.js,.jsx --no-error-on-unmatched-pattern app/javascript/**/*",
    "lint:fix": "eslint --fix --quiet --ext .ts,.tsx,.js,.jsx --no-error-on-unmatched-pattern app/javascript/**/*",
    "brakeman": "brakeman -o log/brakeman.out",
    "stylelint": "stylelint app/**/*.s[ac]ss",
    "stylelint:fix": "stylelint --fix app/**/*.s[ac]ss",
    "test": "jest --silent",
    "test:all": "yarn ts-check && yarn lint && yarn brakeman && bundle exec rspec && yarn test"
  }
}
